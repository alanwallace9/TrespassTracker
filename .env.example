# Environment Variables Template
# Copy this to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# ============================================================================
# SUPABASE (Database)
# ============================================================================
# Get from: https://supabase.com/dashboard → Your Project → Settings → API

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_secret_key_here

# ============================================================================
# CLERK (Authentication)
# ============================================================================
# Get from: https://dashboard.clerk.com → Your App → API Keys

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_or_pk_live_...
CLERK_SECRET_KEY=sk_test_or_sk_live_...

# Clerk Routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard
